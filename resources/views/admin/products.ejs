<div class="container mx-auto">

    <!-- Modal toggle -->
    <button id="newProduct-btn" class="block text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 my-3 float-right" type="button" data-modal-toggle="authentication-modal">
    Add New Product
    </button>

    <!-- Main modal -->
    <div id="authentication-modal" aria-hidden="true" class="hidden overflow-x-hidden overflow-y-auto fixed h-modal md:h-full top-4 left-0 right-0 md:inset-0 z-50 justify-center items-center ">
        <div class="relative w-full max-w-md px-4  md:h-auto">
            <!-- Modal content -->
            <div class="bg-white rounded-lg shadow relative dark:bg-gray-700">
                <div class="flex justify-end">
                    <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-800 dark:hover:text-white" data-modal-toggle="authentication-modal">
                        <svg class="w-5 h-5 text-red-500 hover:w-8" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                    </button>
                </div>
                <form class="space-y-2   px-6 lg:px-8 pb-2 sm:pb-2 xl:pb-2" action="#" id="setOrderData" data-order="insert-modal">
                    <h3 class="text-xl font-medium text-gray-900 dark:text-white" id="modalTitle">Add New Product</h3>
                    <div>
                        <label for="email" class="text-sm font-medium text-gray-900 block mb-2 dark:text-gray-300">Name</label>
                        <input type="text" name="pizzaName" id="pizzaName" class="bg-gray-50 border border-gray-700 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" required="">
                    </div>
                    <div>
                        <label for="price" class="text-sm font-medium text-gray-900 block mb-2 dark:text-gray-300">price</label>
                        <input type="text" name="pizzaPrice" id="pizzaPrice" class="bg-gray-50 border border-gray-700 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" required="">
                    </div>
                    <div>
                        <label for="price" class="text-sm font-medium text-gray-900 block mb-2 dark:text-gray-300">Size</label>
                        <select name="pizzaSize" id="pizzaSize" class="bg-gray-50 border border-gray-700 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" required="">
                          <option value="" >select pizza size</option>
                          <option value="small">Small</option>
                          <option value="medium">Medium</option>
                          <option value="large">Large</option>
                        </select>
                    </div>
                    <div class="">
                      <label for="">Product Thumbnail</label>
                        <input type="file" name="pizzaImage" id="pizzaImage" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white">
                    </div>
                    <div class="" id="previewImg">

                    </div>
                    <div class="flex justify-end">
                      <input type="hidden" name="hiddenProductId"  id="hiddenProductId" value="">
                      <input type="submit" name="" value="save" class="bg-blue-500 px-4 cursor-pointer rounded-lg py-2 " >
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- product modal end -->
    <table class="w-full table-auto bg-white admin-order-table mt-5 mb-8 mx-2">
      <thead>
        <tr class="bg-gray-700 text-white">
          <th class="px-3 py-2 text-left">Product Image</th>
          <th class="px-3 py-2 text-left">Name</th>
          <th class="px-3 py-2 text-left">Price</th>
          <th class="px-3 py-2 text-left">Size</th>
          <th class="px-3 py-2 text-left">Updated At</th>
          <th class="px-3 py-2 text-left">Edit</th>
          <th class="px-3 py-2 text-left">Delete</th>
        </tr>
      </thead>
      <tbody id="productTable">
      </tbody>

    </table>



</div>

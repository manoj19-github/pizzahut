    <!-- hero item start -->
    <section class="hero">
        <div class="container mx-auto flex items-center justify-between">
          <div class="w-1/2">
            <h6 class="text-lg"><em>Are you hungry?</em></h6>
            <h1 class="text-3xl md:text-6xl my-4 font-bold">Don't wait !</h1>
            <button class="px-6 py-2 my-3 rounded-full font-bold mt-4 btn-primary" type="button" name="button">Order Now</button>
          </div>
          <div class="w-1/2">
            <img src="/images/hero-pizza.png" alt="hero"/>
          </div>

        </div>
    </section>
    <!-- hero item end -->
    <!-- menu start -->
    <section class="menu container mx-auto mx-auto py-4">
      <h1 class="text-xl font-bold mb-8">All Pizzas</h1>
      <!-- menu wrapper -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3  xl:grid-cols-4 col-gap-14 row-gap-16">
        <% products.map((product,index)=>{ %>

          <!-- menu item -->
          <div class="w-full md:w-64  mx-3 my-6">
            <img class="h-40 mb-4 mx-auto" src="/images/<%= product.image %>" alt="pizza">
            <div class="text-center">
              <h2 class="mb-4 text-lg text-center"><%= product.name %></h2>
              <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= product.size %></span>
              <div class="flex items-center text-lg mt-4 justify-around font-bold">
                <span><i class="fa fa-inr" aria-hidden="true"></i><%= product.price %></span>
                <% if(user){ %>
                <button data-pizza="<%= JSON.stringify(product) %>"  class="add-to-cart rounded-full py-1 px-6 flex items-center font-bold">
                  <span>+</span>
                  <span class="ml-4">Add</span>
                </button>
              <% }else{ %>
                <a href="/update-cart" class="add-cart rounded-full py-1 px-6 flex items-center font-bold">
                  <span>+</span>
                  <span class="ml-4">Add</span>
                </a>
              <% } %>
              </div>
            </div>
          </div>
          <!-- menu item end -->

      <%  })%>

      </div>
      <!-- menu wrapper end -->
    </section>
    <!-- menu end -->
